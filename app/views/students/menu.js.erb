function nickOnClick()
{
  var offset = $(this).offset();
  var relativeX = (this.pageX - offset.left);
  var relativeY = (this.pageY - offset.top);
var username = $(this).attr('id');

	$('#chat_menu').toggle().offset({top: relativeY, left: relativeX});
	$('.chat_menu_list').attr('id',username);

}
