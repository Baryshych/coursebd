function showPrivate() {
    $("#private_room").show();
    $("#chat_room").hide();
    $("#game_chat").hide();
    $("#showPrivate").addClass('active');
    $("#showGeneral").removeClass('active');
    $("#showGamechat").removeClass('active');

}
function showGeneral() {
    $("#chat_room").show();
    $("#private_room").hide();
    $("#game_chat").hide();
    $("#showGeneral").addClass('active');
    $("#showPrivate").removeClass('active');
    $("#showGamechat").removeClass('active');
}

function showGamechat() {
    $("#game_chat").show();
    $("#chat_room").hide();
    $("#private_room").hide();
    $("#showGamechat").addClass('active');
    $("#showGeneral").removeClass('active');
    $("#showPrivate").removeClass('active');
}