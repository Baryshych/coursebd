<% if user_signed_in? %>
    <div class="row">
        <h2 class="greeting">Добрий день, <%= current_user.email %></h2>
    </div>
    <%= current_user.permissions %>
    <div class="row picklist">
        <a href='/users/edit'>Змінити налаштування профілю</a>
    </div>
    <div class="row picklist">
        <a href='/mainbase'>Переглянути список студентів</a>
    </div>
    <div class="row picklist">
        <%= link_to 'Вийти', destroy_user_session_path, :method => :delete %>
    </div>
<% else %>
    <div class="row picklist">
        <div class="col-md-4 col-md-offset-4">
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
  <h4><%= "Адреса електроної пошти" %></h4>
  <p><%= f.text_field :email, :class => 'form-control', :placeholder => "test@test.com" %></p>
  <h4><%= "Пароль" %></h4>
  <p><%= f.password_field :password, :class => 'form-control', :placeholder => "пароль"  %></p>
  <%= f.check_box :remember_me %>
  <%= "Запам’ятати мене" %>
   </div>
    </div>
  <div class="row">
        <div class="col-md-4 col-md-offset-4">
  <%= f.submit 'Увійти', :class => 'btn btn-default'  %>
<% end %> 
    </div>
   </div>
<%= link_to 'Зареєструватися', 'users/sign_up' %>
<% end %>

