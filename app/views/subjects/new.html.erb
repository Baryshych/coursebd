<%= form_for :subject do |f| %>
  <div class = 'row'>
    <div class="col-md-4 col-md-offset-4">
      <%= "Назва предмету" %><br>
      <%= f.text_field :name, :class => 'form-control', :placeholder => "Математичний аналіз" %>
    </div>
  </div>
   <div class = 'row'>
    <div class="col-md-4 col-md-offset-4">
      <%= "Предмети" %><br>
      <%= f.select(:lecturers_id, Lecturer.all.collect {|l| [ l.name, l.id ] }, {}, { :multiple => true }) %>
    </div>
  </div>
  <div class = 'row'>
    <div class="col-md-4 col-md-offset-4">
      <%= "Кредит" %><br>
      <%= f.number_field :credit, in: 1.0..10.0, step: 0.5, :class => 'form-control', :placeholder => "6"  %>
    </div>
  </div>
  
  <div class = 'row'>
    <div class="col-md-4 col-md-offset-4">
      <%= "Кількість годин" %><br>
      <%= f.number_field :number_of_hours, in: 1.0..200.0, step: 1, :class => 'form-control', :placeholder => "160" %>
    </div>
  </div>
  
  <div class = 'row'>
    <div class="col-md-4 col-md-offset-4">
    <%= f.submit 'Зберегти', :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>