<% @students.each do |student| %>
<div class='studentEntry'>
<td><%= student.name %></td>
<td><%= student.surname %></td>
<td><%= link_to 'Показати деталі', student_path(student) %></td>
<% if current_user.permissions == 'admin' %>
<td><%= link_to 'Видалити запис', student_path(student),
              method: :delete,
              data: { confirm: 'Ви впевнені?' } %></td>
    </tr>
<% end %>
</div>
<% end %>
<% if current_user.permissions == 'admin' %>
<%= link_to 'Створити новий запис', 'students/new' %>
<% end %>
<%= link_to 'Повернутися', '/' %>